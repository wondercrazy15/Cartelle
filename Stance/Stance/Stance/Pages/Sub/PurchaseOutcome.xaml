<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stance.Pages.Sub.PurchaseOutcome">

  <StackLayout Spacing="0" BackgroundColor="#007077" >

    <ScrollView>

        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="40,100,40,0" Spacing="50" WidthRequest="260" >

          <Label x:Name="purchaseOutcome" FontSize="30" TextColor="White" FontFamily="AvenirNextCondensed-Bold" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0,20,0,0" />
          <Label x:Name="purchaseMessage" TextColor="White" HorizontalTextAlignment="Center" FontSize="18" FontFamily="PingFangTC-Regular"/>

          <Button x:Name="SeeProgramBtn" Clicked="SeeProgramBtn_Clicked" Text="CONTINUE" FontSize="22" BorderColor="White" BorderWidth="1" TextColor="White" FontFamily="AvenirNextCondensed-Bold" />

        </StackLayout>

    </ScrollView>

  </StackLayout>


</ContentPage>