<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stance.Pages.Sub.InitialLoading">

    <StackLayout Spacing="0" BackgroundColor="#007077" >
        <StackLayout Spacing="20" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Padding="50,0,50,0">
            <ActivityIndicator HorizontalOptions="CenterAndExpand" Color="White" IsRunning="True" />
            <Label Text="LOADING..." FontSize="26" TextColor="White" FontAttributes="Bold" FontFamily="AvenirNextCondensed-Bold" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </StackLayout>
</ContentPage>